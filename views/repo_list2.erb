 <table cellpadding="2" cellspacing="0" border="0">
	 <thead style="font-weight: bold">
		 <tr>
		 <th>Repo</th>
		 <th>Size</th>
		 <th>Watchers</th>
		 <th>Forks</th>
		 <th>Issue</th>
		 </tr>
	 </thead>
	 <tbody>
		 <% @repos.each do |repo| %>
			<tr>
				<td><a href="<%= repo['html_url'] %>" target="_blank"><%= repo['name'] %></td>
				<td><%= repo['size'] %></td>
				<td><%= repo['watchers_count'] %></td>
				<td><%= repo['nameforks_count'] %></td>
				<td><%= repo['open_issues_count'] %></td>
			</tr>
			<% end %>

	 </tr>
	 </tbody>
 </table>
</body>
</html>